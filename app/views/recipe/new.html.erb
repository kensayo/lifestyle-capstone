<h1>Create New Post</h1>
<%= form_for :recipe, url: recipe_index_path do |f| %>
  <% if @recipe.errors.any? %>
    <% @recipe.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </p>
  <p>
    <%= f.label :category_id %>
    <%= select_tag :category_id, options_for_select(Category.names), class: 'form-control' %>
  </p>
  <p>
    <% if @recipe.image.attached? %>
      <%= image_tag @recipe.image, style: "width: 200px; display:block" %>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </p>
  <p>
    <%= f.submit "Save Post", class: 'btn btn-danger fw-bold w-100' %>
  </p>
<% end %>