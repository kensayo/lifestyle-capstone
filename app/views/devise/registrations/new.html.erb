<div class="row g-0 h-87" >
  <div class="d-flex justify-content-center align-items-center">
    <div class="card" style="width: 25rem">
      <%= image_tag 'resources/header_sign_in.jpg', class: 'card-img-top', alt: 'Cake' %>
      <div class="card-body">
        <h2 class="card-title fw-bold text-warning text-center">Sign Up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field my-3">
            <%= f.label :email %><br />
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'w-100' %>
          </div>

          <div class="field my-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'w-100' %>
          </div>

          <div class="field my-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-100' %>
          </div>

          <div class="actions d-flex justify-content-center my-3">
            <%= f.submit "Sign Up", class: 'btn btn-warning w-50' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>